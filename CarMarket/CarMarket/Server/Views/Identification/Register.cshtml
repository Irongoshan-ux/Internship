@model CarMarket.Server.Infrastructure.Identification.Models.RegisterViewModel

<div class="row">

    <div class="col-md-6 offset-md-3">

        <h1>Register</h1>

        <form asp-action="Register" method="post">

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Email">Enter Email</label>
                <input class="form-control" type="text" asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="FirstName">Enter your first name</label>
                <input class="form-control" type="text" asp-for="FirstName" />
            </div>

            <div class="form-group">
                <label asp-for="LastName">Enter your last name</label>
                <input class="form-control" type="text" asp-for="LastName" />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Enter your phone number</label>
                <input class="form-control" type="tel" asp-for="PhoneNumber" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Enter Password</label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>

            <div>
                <label asp-for="ConfirmPassword">Confirm Password</label><br />
                <input class="form-control" type="password" asp-for="ConfirmPassword" />
            </div>

            <br>

            <p>
                <button class="btn btn-primary" type="submit">Register</button>
            </p>

        </form>
    </div>
</div>