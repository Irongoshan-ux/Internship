@model CarMarket.Server.Infrastructure.Identification.Models.LoginViewModel

<div class="row">

    <div class="col-md-6 offset-md-3">

        <h1>Login</h1>

        <form asp-action="Login" method="post">

            <div asp-validation-summary="All"></div>

            <input hidden asp-for="ReturnUrl" />

            <div class="form-group">
                <label asp-for="Email">Enter Email</label>
                <input class="form-control" type="text" asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Enter Password</label>
                <input class="form-control" type="password" asp-for="Password" />
            </div>

            <br>

            <p>
                <button class="btn btn-primary" type="submit">Log in</button>
            </p>

        </form>

        <form asp-action="Register" method="get">
            <p>
                Don't have an account? <a href="https://localhost:10001/identification/register">Register</a>
            </p>
           
        </form>

    </div>
</div>